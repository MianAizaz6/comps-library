---
import SectionWrapper from '~/layouts/SectionWrapper.astro';
import Image from '~/components/common/Image.astro';
import { type ImageMetadata } from 'astro';

export interface Pattern {
  name: string;
  description: string;
  image: ImageMetadata;
  alt: string;
  suitable?: string[];
  benefits?: string[];
}

export interface Props {
  title: string;
  description?: string;
  patterns: Pattern[];
}

const { title, description, patterns } = Astro.props;
---

<SectionWrapper>
  <div class="container mx-auto px-4">
    <div class="text-center mb-12">
      <h2 class="text-3xl font-bold mb-4">{title}</h2>
      {description && <p class="text-gray-600 dark:text-gray-400 max-w-3xl mx-auto">{description}</p>}
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {
        patterns.map((pattern) => (
          <div class="bg-white dark:bg-gray-800 flex flex-col rounded-lg overflow-hidden shadow-md transition-transform duration-300 hover:shadow-lg">
            <div class="w-full">
              <Image
                src={pattern.image}
                alt={pattern.alt}
                class="w-full h-full object-cover"
                loading="lazy"
                width={460}
                height={300}
              />
            </div>

            <div class="p-6">
              <h3 class="text-xl font-bold mb-3">{pattern.name}</h3>
              <p class="text-gray-600 dark:text-gray-400 mb-4">{pattern.description}</p>

              {pattern.suitable && pattern.suitable.length > 0 && (
                <div class="mb-4">
                  <h4 class="font-semibold text-sm uppercase text-gray-700 dark:text-gray-300 mb-2">Geeignet f√ºr:</h4>
                  <ul class="list-disc list-inside text-gray-600 dark:text-gray-400 text-sm">
                    {pattern.suitable.map((item) => (
                      <li>{item}</li>
                    ))}
                  </ul>
                </div>
              )}

              {pattern.benefits && pattern.benefits.length > 0 && (
                <div>
                  <h4 class="font-semibold text-sm uppercase text-gray-700 dark:text-gray-300 mb-2">Vorteile:</h4>
                  <ul class="list-disc list-inside text-gray-600 dark:text-gray-400 text-sm">
                    {pattern.benefits.map((item) => (
                      <li>{item}</li>
                    ))}
                  </ul>
                </div>
              )}
            </div>
          </div>
        ))
      }
    </div>
  </div>
</SectionWrapper>
