---
import { Icon } from 'astro-icon/components';
import SectionWrapper from '~/layouts/SectionWrapper.astro';

interface Chapter {
  title: string;
  description: string;
}

export interface Props {
  id: string;
  title: string;
  items: Chapter[];
  link?: string;
  linkText?: string;
}

const { id, title, items, link, linkText } = Astro.props;
---

<SectionWrapper id={id}>
  <div class="max-w-screen-xl px-4 py-8 mx-auto lg:px-6 sm:py-16 lg:py-24">
    <div class="text-center">
      <h2
        class="text-3xl font-extrabold leading-tight tracking-tight text-gray-900 sm:text-4xl dark:text-white"
        set:html={title}
      />
    </div>

    <div
      class="max-w-3xl p-5 mx-auto mt-8 space-y-5 border border-gray-100 rounded-lg bg-gray-50 dark:bg-gray-800 dark:border-gray-700"
    >
      {
        items.map((chapter, index) => (
          <div class:list={[{ 'pb-5 border-b border-gray-200 dark:border-gray-700': index !== items.length - 1 }]}>
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white" set:html={chapter.title} />
            <p class="mt-1 text-base font-normal text-gray-500 dark:text-gray-400" set:html={chapter.description} />
          </div>
        ))
      }
    </div>

    <div class="mt-8 text-center">
      {
        link && (
          <a
            href={link}
            title=""
            class="inline-flex items-center text-lg font-medium text-primary-600 hover:underline dark:text-primary-500"
          >
            {linkText}
            <Icon name="material-symbols:arrow-right-alt-rounded" class="w-5 h-5 ml-2" />
          </a>
        )
      }
    </div>
  </div>
</SectionWrapper>
