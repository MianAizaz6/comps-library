---
import { Image } from 'astro:assets';
import WHGImg from '~/assets/images/downloads/whg-certificate.png';
import zerImg from '~/assets/images/downloads/zer.png';
import SectionWrapper from '~/layouts/SectionWrapper.astro';

const downloadsData = [
  {
    category: 'Zertifikate',
    title: 'WHG-Fachbetriebszertifikat',
    description: `TÜV SÜD Fachbetriebsbescheinigung nach WHG bis 04.2026 mit Ergänzung für Betonfertigteile. Bescheinigt fachgerechten Umgang mit wassergefährdenden Stoffen.`,
    time: 'Gültig bis 04/2026',
    image: WHGImg,
    download: '/assets/certs/TUEV_SUED_Fachbetriebsbescheinigung_nach_WHG_bis_04.2026_Ergaenzung_Betonfertigteile.pdf',
    pdfFile: true,
    aktuellesLink: '/aktuelles/audits-zertifizierungen/#whg',
  },
  {
    category: 'Zertifikate',
    title: 'SCC** Sicherheitszertifikat',
    description: `SCC-VAZ 2021 Zertifikat für Sicherheit, Gesundheits- und Umweltschutz. Bestätigt höchste Standards in der betrieblichen Organisation - gültig bis 18.12.2026.`,
    time: 'Gültig bis 18.12.2026',
    image: zerImg,
    download: '/assets/certs/SCC-VAZ_2021_Zertifikat_Q-MA_Bau_GmbH_Co_KG_gueltig_bis_18.12.2026.pdf',
    pdfFile: true,
    aktuellesLink: '/aktuelles/audits-zertifizierungen/#scc',
  },
  {
    category: 'Zertifikate',
    title: 'EUROTEAM Autorisierter Fachbetrieb',
    description: `EUROTEAM Zertifikat als autorisierter Fachbetrieb für Q-MA Bau 2025. Bestätigt die fachliche Kompetenz und Qualifikation unseres Unternehmens.`,
    time: 'Zertifiziert 2025',
    image: zerImg,
    download: '/assets/certs/EUROTEAM_Autorisierter_Fachbetrieb_Q-MA_Bau_2025.pdf',
    pdfFile: true,
    aktuellesLink: '/aktuelles/audits-zertifizierungen/',
  },
  {
    category: 'Steuerliche Dokumente',
    title: 'Freistellungsbescheinigung',
    description: `Freistellungsbescheinigung für Q-MA-Bau GmbH & Co. KG - gültig bis 2027. Befreiung von der Bauabzugsteuer gemäß § 48b EStG.`,
    time: 'Gültig bis 2027',
    image: WHGImg,
    download: '/assets/certs/Freistellungsbescheinigung_Q-MA-Bau-GmbH_Co_KG_2027.pdf',
    pdfFile: true,
    aktuellesLink: '/aktuelles/',
  },
  {
    category: 'Steuerliche Dokumente',
    title: 'Nachweis Steuerschuldnerschaft',
    description: `Nachweis der Steuerschuldnerschaft für Q-MA-Bau GmbH & Co. KG - gültig bis 2027. Bestätigt die ordnungsgemäße steuerliche Behandlung.`,
    time: 'Gültig bis 2027',
    image: WHGImg,
    download: '/assets/certs/Nachweis_Steuerschuldnerschaft_Q-MA-Bau-GmbH_Co_KG_2027.pdf',
    pdfFile: true,
    aktuellesLink: '/aktuelles/',
  },
];
---

<SectionWrapper class="bg-gray-50 py-16 px-4">
  <div class="max-w-7xl mx-auto">
    <div class="text-center mb-12">
      <h2 class="text-3xl font-bold text-gray-900 mb-4">Zertifikate & Downloads</h2>
      <p class="text-lg text-gray-600 max-w-3xl mx-auto">
        Laden Sie unsere aktuellen Zertifikate und Dokumente als PDF herunter. Weitere Informationen zu unseren
        Zertifizierungen finden Sie im Bereich <a href="/aktuelles/" class="text-primary hover:underline font-semibold"
          >Aktuelles</a
        >.
      </p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      {
        downloadsData.map((card) => (
          <div class="dark:bg-white bg-gray-900 rounded-xl shadow-md overflow-hidden border border-green-200 flex flex-col">
            <div class="bg-primary p-4">
              <Image src={card.image} alt={card.title} class="h-48 w-full object-contain" />
            </div>
            <div class="p-5 flex flex-col justify-between flex-grow">
              <div class="flex-grow">
                <span class="inline-block px-3 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-700 mb-3">
                  {card.category}
                </span>
                <h3 class="text-lg font-bold leading-6 dark:text-gray-900 text-white mb-2">{card.title}</h3>
                <p class="text-sm dark:text-gray-600 text-white mb-3 line-clamp-3">{card.description}</p>
                <p class="text-xs dark:text-gray-400 text-white mb-4">{card.time}</p>
              </div>

              <div class="flex gap-3 mt-4">
                <a
                  href={card.download}
                  download
                  class="bg-green-500 text-white px-4 py-2 rounded-lg text-sm font-medium flex items-center gap-2 hover:bg-green-600 transition"
                >
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
                    />
                  </svg>
                  PDF Download
                </a>

                <a
                  href={card.aktuellesLink}
                  class="text-sm dark:text-green-700 text-white font-medium flex items-center gap-1 hover:underline px-2 py-2"
                >
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                    />
                  </svg>
                  Mehr Details
                </a>
              </div>
            </div>
          </div>
        ))
      }
    </div>

    <div class="mt-12 text-center">
      <p class="text-gray-600 mb-4">
        Weitere Informationen zu unseren Zertifizierungen, Schulungen und Firmen-Events finden Sie in unserem
        Aktuelles-Bereich.
      </p>
      <a
        href="/aktuelles/"
        class="inline-flex items-center gap-2 bg-primary text-white px-6 py-3 rounded-lg font-semibold hover:bg-green-600 transition"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"
          ></path>
        </svg>
        Zum Aktuelles-Bereich
      </a>
    </div>
  </div>
</SectionWrapper>
