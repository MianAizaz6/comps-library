---
import type { ImageMetadata } from 'astro';
import { Image } from 'astro:assets';
import Button, { type Props as ButtonProps } from '~/components/pa-its/Button.astro';
import SectionWrapper from '~/layouts/SectionWrapper.astro';

export interface Props {
  title: string;
  subtitle: string;
  description: string;
  image: ImageMetadata;
  imageAlt: string;
  callToActions?: ButtonProps[];
}

const { title, subtitle, description, image, imageAlt, callToActions } = Astro.props;
---

<SectionWrapper>
  <div>
    <p
      class="mb-8 max-w-prose text-pretty font-light text-neutral-700 dark:text-neutral-300 sm:text-lg text-xl"
      set:html={subtitle}
    />
  </div>
  <div class="flex flex-col items-center justify-between space-y-4 sm:flex-row sm:space-y-0">
    <div>
      <h1
        class="block text-4xl font-bold tracking-tighter text-neutral-800 dark:text-neutral-200 sm:text-5xl md:text-6xl lg:text-7xl"
        set:html={title}
      />
      <p class="text-lg text-neutral-600 dark:text-neutral-400" set:html={description} />
      <div class="flex mt-8 gap-4">
        {callToActions?.map((cta) => <Button {...cta} />)}
      </div>
    </div>
    <div>
      <Image id="fadeInMoveRight" src={image} class="w-[600px]" alt={imageAlt} />
    </div>
  </div>
</SectionWrapper>
