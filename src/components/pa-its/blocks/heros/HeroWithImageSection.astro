---
import { type ImageMetadata } from 'astro';
import Button from '~/components/pa-its/Button.astro';
import { type Props as ButtonProps } from '~/components/pa-its/Button.astro';
import { Image } from 'astro:assets';
import SectionWrapper from '~/layouts/SectionWrapper.astro';

export interface Props {
  title: string;
  subtitle: string;
  image: ImageMetadata;
  imageAlt: string;
  callToActions?: ButtonProps[];
}

const { title, subtitle, image, imageAlt, callToActions } = Astro.props;
---

<SectionWrapper id="hero" containerClass="grid lg:gap-8 xl:gap-0 lg:pt-32 lg:pb-16 lg:grid-cols-12 ">
  <div class="mr-auto place-self-center lg:col-span-7">
    <h1
      class="font-heading max-w-2xl mb-4 text-4xl font-extrabold leading-none md:text-5xl xl:text-6xl dark:text-white"
      set:html={title}
    />
    <p class="max-w-2xl mb-6 text-gray-500 lg:mb-8 md:text-lg lg:text-xl dark:text-gray-400" set:html={subtitle} />
    <div class="flex mb-8 lg:mb-16 gap-4 flex-col md:flex-row">
      {callToActions?.map((cta) => <Button {...cta} />)}
    </div>
  </div>
  <div class="lg:mt-0 lg:col-span-5 lg:flex max-w-md">
    <Image src={image} alt={imageAlt} class="w-fit aspect-auto object-contain" />
  </div>
</SectionWrapper>
