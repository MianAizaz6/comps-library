---
import SectionWrapper from '~/layouts/SectionWrapper.astro';

interface SocialProof {
  label: string;
  name: string;
}

export interface Props {
  id?: string;
  socialProofs: SocialProof[];
  title?: string;
  subtitle?: string;
}

const { socialProofs, id = 'socialProof', title, subtitle } = Astro.props;
const items = `sm:grid-cols-${socialProofs.length}`;
---

<SectionWrapper id={id} showHighlight={true}>
  <div class="max-w-screen-xl px-4 py-8 mx-auto text-center lg:py-16 lg:px-6">
    <h2
      class="mb-4 text-4xl tracking-tight font-extrabold text-gray-900 lg:text-5xl dark:text-white"
      set:html={title}
    />
    <p
      class="mb-6 font-light text-gray-500 sm:text-lg sm:px-8 lg:px-32 xl:px-64 dark:text-gray-400"
      set:html={subtitle}
    />

    <dl class={`grid max-w-screen-lg gap-8 mx-auto text-gray-900 ${items} dark:text-white`}>
      {
        socialProofs.map((proof) => (
          <div class="flex flex-col items-center justify-center">
            <dt class="mb-2 text-3xl md:text-4xl font-extrabold break-keep" set:html={proof.label} />
            <dd class="font-light text-gray-500 dark:text-gray-400" set:html={proof.name} />
          </div>
        ))
      }
    </dl>
  </div>
</SectionWrapper>
