---
export interface Props {
  title?: string;
  description?: string;
  regions: Array<{
    name: string;
    projectCount: number;
    color?: string;
  }>;
  showHighlight?: boolean;
}

const { title, description, regions, showHighlight = false } = Astro.props;
---

<section class={`py-16 md:py-20 ${showHighlight ? 'bg-gray-50 dark:bg-gray-900' : ''}`}>
  <div class="max-w-6xl mx-auto px-4 sm:px-6">
    {
      (title || description) && (
        <div class="text-center mb-12">
          {title && (
            <h2 class="text-3xl font-bold tracking-tight text-gray-900 dark:text-white sm:text-4xl mb-4">{title}</h2>
          )}
          {description && <p class="text-lg text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">{description}</p>}
        </div>
      )
    }

    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-8">
      <div class="grid lg:grid-cols-2 gap-8 items-center">
        <!-- Deutschlandkarte Placeholder -->
        <div class="aspect-w-4 aspect-h-5 bg-gray-100 dark:bg-gray-700 rounded-lg flex items-center justify-center">
          <div class="text-center text-gray-500 dark:text-gray-400">
            <svg class="w-32 h-32 mx-auto mb-4" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2L2 7v10c0 5.55 3.84 9.739 9 11 5.16-1.261 9-5.45 9-11V7l-10-5z"></path>
            </svg>
            <p class="text-lg font-medium">Deutschland</p>
            <p class="text-sm mt-2">Unsere Projektstandorte</p>
          </div>
        </div>

        <!-- Regionen Liste -->
        <div>
          <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-6">Aktive Regionen</h3>
          <div class="space-y-4">
            {
              regions.map((region) => (
                <div class="flex items-center justify-between p-4 bg-gray-50 dark:bg-gray-700 rounded-lg">
                  <div class="flex items-center">
                    <div class={`w-4 h-4 rounded-full mr-3 bg-primary-600`} />
                    <span class="font-medium text-gray-900 dark:text-white">{region.name}</span>
                  </div>
                  <span class="text-sm text-gray-600 dark:text-gray-300">
                    {region.projectCount} Projekt{region.projectCount !== 1 ? 'e' : ''}
                  </span>
                </div>
              ))
            }
          </div>

          <div class="mt-6 p-4 bg-primary-50 dark:bg-primary-900/20 rounded-lg">
            <p class="text-sm text-primary-700 dark:text-primary-300">
              <strong>Bundesweite Präsenz:</strong> Wir sind in {regions.length} Bundesländern aktiv und haben insgesamt
              {regions.reduce((acc, region) => acc + region.projectCount, 0)} erfolgreich abgeschlossene Projekte.
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
