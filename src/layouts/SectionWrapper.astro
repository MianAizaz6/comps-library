---
import { twMerge } from 'tailwind-merge';
import Background from '~/components/ui/Background.astro';

interface Props {
  id?: string;
  containerClass?: string;
  bg?: string;
  as?: string;
  showHighlight?: boolean;
}

const { id, containerClass = '', showHighlight = false, bg, as = 'section' } = Astro.props;

const WrapperTag = as;
---

<WrapperTag class="relative not-prose scroll-mt-[72px]" {...id ? { id } : {}}>
  <div class="absolute inset-0 pointer-events-none -z-[1]" aria-hidden="true">
    <slot name="bg">
      {
        bg ? (
          <Fragment set:html={bg} />
        ) : (
          <Background classes={showHighlight ? 'bg-gray-50 dark:bg-green-800/30' : ''} />
        )
      }
    </slot>
  </div>
  <div
    class:list={[
      twMerge(
        'relative mx-auto max-w-8xl px-4 md:px-10 text-default ',
        id === 'hero' ? 'py-0' : 'py-12 md:py-16 lg:py-20',
        containerClass
      ),
    ]}
  >
    <slot />
  </div>
</WrapperTag>
